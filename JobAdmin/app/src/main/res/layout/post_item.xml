<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="120dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/post_image"
                android:id="@+id/name_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="thuan"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/post_image"
                app:layout_constraintTop_toBottomOf="@+id/name_view"
                android:id="@+id/state_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="thuan"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/post_image"
                app:layout_constraintTop_toBottomOf="@+id/state_view"
                android:id="@+id/request_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="thuan"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/post_image"
                app:layout_constraintTop_toBottomOf="@+id/request_view"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="thuan"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/post_image"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="thuan"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:background="@drawable/et_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/likes"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="chọn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_toEndOf="@id/likes"
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_register" />

            <TextView
                android:layout_toEndOf="@id/like"
                android:layout_marginTop="5dp"
                android:id="@+id/comments"
                android:layout_marginLeft="50dp"
                android:text="xem phản hồi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/comments"
                android:src="@drawable/ic_comment" />


        </RelativeLayout>






    </LinearLayout>

</RelativeLayout>