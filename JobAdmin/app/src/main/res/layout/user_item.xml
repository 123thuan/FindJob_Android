<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C7D7DC"
    android:padding="12dp"
    android:layout_marginTop="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_work"
            android:textSize="24sp"
            android:textColor="#F81919"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên việc làm"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_profile"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="30dp"
        />



    <LinearLayout
        android:id="@+id/thuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/fullname1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="Full name:" />
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="Full name" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/thuan1"
            android:layout_below="@+id/thuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            tools:ignore="NotSibling">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="tuổi:" />
            <TextView
                android:textSize="14sp"
                android:layout_marginLeft="86dp"
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Full name" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/thuan3"
            android:layout_below="@+id/thuan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            tools:ignore="NotSibling">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="kinh nghiệm:" />
            <TextView
                android:textSize="14sp"
                android:layout_marginLeft="32dp"
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Full name" />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/thuan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            tools:ignore="NotSibling">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_money"/>

            <TextView
                android:id="@+id/salary"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textColor="#F1422B"
                android:text="Lương:" />
            <ImageView
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:id="@+id/address"
                android:textColor="#3770D8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="state:" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="username"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:layout_below="@+id/image_profile"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />

    <Button
        android:layout_marginRight="5dp"
        android:layout_below="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/button_background"
        android:id="@+id/btn_follow"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />
    </RelativeLayout>

</RelativeLayout>